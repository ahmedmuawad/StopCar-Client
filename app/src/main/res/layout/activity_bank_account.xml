<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical">


    <include layout="@layout/layout_back1"></include>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="@color/color_white"
        app:cardCornerRadius="4dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="120dp">
                <ImageView
                    android:src="@drawable/xd"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@drawable/bank"
                        android:layout_gravity="center"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:tint="@color/white" />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:id="@+id/bank_name"
                        android:fontFamily="@font/ar1"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text=" بنك الجزيرة"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingTop="10dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp">

<LinearLayout
    android:layout_marginTop="5dp"
    android:layout_gravity="start"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:src="@drawable/calculator"
        android:layout_gravity="center"
        android:layout_width="23dp"
        android:layout_height="23dp"
        app:tint="@color/colorPrimary" />
    <TextView
   android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/account_num"
        android:textSize="14sp"
        android:fontFamily="@font/fofo12"
        android:textColor="#424242" />
</LinearLayout>


                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/account_num"
                    android:text="001095009598002"
                    android:fontFamily="@font/fofo11"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="8dp"
                    android:textColor="#BF5A5A5A" />



            </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#B7D8D8D8" />


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingTop="10dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp">

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_gravity="start"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/savemoney"
                        android:layout_gravity="center"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        app:tint="@color/colorPrimary" />
                    <TextView
                        android:layout_marginStart="10dp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/iban"
                        android:textSize="14sp"
                        android:fontFamily="@font/fofo12"
                        android:textColor="#424242" />
                </LinearLayout>



                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/iban"
                    android:text="IBAN SA3360100001095009598002"
                    android:fontFamily="@font/fofo11"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="8dp"
                    android:textColor="#BF5A5A5A" />



            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#B7D8D8D8" />


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingTop="10dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp">

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_gravity="start"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/bank_2"
                        android:layout_gravity="center"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        app:tint="@color/colorPrimary" />
                    <TextView
                        android:layout_marginStart="10dp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/name"
                        android:textSize="14sp"
                        android:fontFamily="@font/fofo12"
                        android:textColor="#424242" />
                </LinearLayout>



                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/name"
                    android:text="مؤسسة حلول نعم"
                    android:fontFamily="@font/fofo11"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="8dp"
                    android:textColor="#BF5A5A5A" />



            </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#B7D8D8D8" />




            <TextView
                android:layout_marginTop="15dp"
          android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fofo12"
                android:textColor="#424242"
                android:text="@string/whatsup_msg" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fofo11"
                    android:text="@string/whatsapp"
                    android:textColor="#BF5A5A5A"  />
                <mehdi.sakout.fancybuttons.FancyButton
                    xmlns:fancy="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/whatsapp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    fancy:fb_borderColor="@color/colorPrimary"
                    fancy:fb_borderWidth="1dp"
                    fancy:fb_defaultColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="8dp"
                    fancy:fb_focusColor="@color/colorPrimaryDark"
                    fancy:fb_radius="30dp"
                    fancy:fb_text="+966 56 441 9857"
                    fancy:fb_textColor="#FFFFFF" />


            </RelativeLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>